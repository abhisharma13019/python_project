import string
import secrets

def get_user_preferences():
    print("ğŸ” Welcome to the Advanced Password Generator\n")

    try:
        length = int(input("Enter desired password length: "))
        if length < 4:
            print("Password length should be at least 4.")
            return None, None, None, None

        use_letters = input("Include letters? (y/n): ").lower() == 'y'
        use_digits = input("Include digits? (y/n): ").lower() == 'y'
        use_symbols = input("Include special characters? (y/n): ").lower() == 'y'

        if not (use_letters or use_digits or use_symbols):
            print("At least one character type must be selected.")
            return None, None, None, None

        return length, use_letters, use_digits, use_symbols
    except ValueError:
        print("Invalid input! Please enter numbers where required.")
        return None, None, None, None


def generate_password(length, use_letters, use_digits, use_symbols):
    char_pool = ''
    if use_letters:
        char_pool += string.ascii_letters
    if use_digits:
        char_pool += string.digits
    if use_symbols:
        char_pool += string.punctuation

    # Use secrets.choice for better randomness (cryptographic)
    password = ''.join(secrets.choice(char_pool) for _ in range(length))
    return password


# Main Program
length, use_letters, use_digits, use_symbols = get_user_preferences()

if length:
    password = generate_password(length, use_letters, use_digits, use_symbols)
    print("\nğŸ”‘ Generated Secure Password:", password)
